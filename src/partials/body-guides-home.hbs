<div class="dev home">
  <div class="dev home-background">
    <h1>{{{page.title}}}</h1>
  </div>
	<main data-ceiling="topbar">
		<article class="article">
      <div class="intro">
          {{{page.contents}}}
      </div>
      <div class="search-container">
        <input id="search-input" type="text" placeholder="Search guides">
        <a id="search-open" ><i class="fa fa-search" aria-hidden="true"></i></a>
      </div>
      <div id="use-case-dropdown" class="dropdown">
        <button onclick="toggleDropdown()" class="guides-dropdown-toggle">Filter by use case â–¼</button>
        <ul id="use-cases" class="dropdown-content" role="listbox">
          <li role="option" value="all" onclick="showAll()">All</li>
          {{#each (get-use-cases)}}
          <li role="option" value="{{this}}" onclick="filterUseCases(event)">{{this}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="dev-cards">
        {{#each (get-guide-pages)}}
					<div data-use-case="{{this.asciidoc.attributes.page-use-case}}" class="dev-card">
            <div class="card-header">
              <h3>
                {{this.asciidoc.attributes.doctitle}}
              </h3>
            </div>
            <div class="time">
              <p>
                {{this.asciidoc.attributes.page-est-time}}
              </p>
            </div>
            <div class="card-summary">
              <p>
                {{this.asciidoc.attributes.description}}
              </p>
            </div>
            <div class="metadata">
              <ul>
                <li><b>Use Case:</b> {{this.asciidoc.attributes.page-use-case}}</li>
                <li><b>Hazelcast Edition:</b> {{this.asciidoc.attributes.page-edition}}</li>
              </ul>
            </div>
            <div class="get-started">
              <ul>
                <li>
                  <a href="{{{siteRootPath}}}{{this.out.path}}">Start</a>
                </li>
              </ul>
            </div>
            <div class="source"><a class="git" href="{{this.src.origin.webUrl}}/tree/{{this.asciidoc.attributes.page-origin-branch}}/modules/ROOT/examples">GitHub Source</a></div>
					</div>
        {{/each}}
		</article>
	</main>
</div>
